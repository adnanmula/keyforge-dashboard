{% extends "Keyforge/Shared/keyforge_base.html.twig" %}

{% block title %}{{ 'menu.register'|trans }}{% endblock %}

{% block body %}
    <div class="divider py-1"></div>

    <form action="{{ path('register') }}" method="post">
        <div class="row">
            <div class="col-1 col-sm-4 col-lg-3"></div>
            <div class="col-12 col-sm-12 col-lg-6">

                {% if error %}
                    <div class="divider py-1"></div>

                    <div class="alert alert-danger" role="alert">
                        {{ error }}
                    </div>
                {% endif %}

                <div class="shadow-lg p-3 mb-5 bg-white rounded">
                    <form action="{{ path('register') }}" method="post">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="username" name="_username" placeholder="Username"/>
                                </div>
                            </div>
                        </div>

                        <div class="divider py-1"></div>

                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <input type="password" class="form-control" id="password" name="_password" placeholder="Password"/>
                                </div>
                            </div>
                        </div>

                        <div class="divider py-1"></div>

                        <div class="row mt-3">
                            <div class="col-12">
                                <button type="submit" class="btn btn-block btn-dark w-100">{{ 'menu.register'|trans }}</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
