            type: 'bar',
            data: {
                labels: Object.keys(setPickRate),
                datasets: [
                    {
                        label: '%',
                        data: Object.values(setPickRate),
                        borderColor: 'rgb(37, 41, 33)',
                        backgroundColor: 'rgb(37, 41, 33)',
                    },
                ]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: false,
                        position: 'bottom',
