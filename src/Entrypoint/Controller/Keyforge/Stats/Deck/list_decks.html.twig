{% extends "Keyforge/Shared/keyforge_base.html.twig" %}

{% block title %}{% if owner is null %}{{ 'menu.decks'|trans }}{% else %}{{ 'menu.mydecks'|trans }}{% endif %}{% endblock %}

{% block header %}
    <style>
        .btn-xs > .btn, .btn-xs {
            font-size  : .700rem;
            line-height  : .75;
        }

        .filters-margin {
            margin-top: 0;
        }

        @media (min-width: 992px) {
            .filters-margin {
                margin-top: 4.5rem;
            }
        }

         .toggle-icon {
             transition: transform 0.3s ease;
         }

        .rotate-down {
            transform: rotate(180deg);
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'Keyforge/Stats/Deck/filters.html.twig' with {'sets': sets, 'houses': houses, 'privateTags': privateTags} %}
    {% include 'Keyforge/Stats/Deck/deck_list_table.html.twig' with {'owner': owner} %}
{% endblock %}
