<div class="row text-center align-items-center mb-2">
    {% set textLeftColor = '' %}
    {% if left > right %}
        {% set textLeftColor = 'text-success' %}
    {% elseif left < right %}
        {% set textLeftColor = 'text-danger' %}
    {% endif %}

    <div class="col-5 fw-bold {{ textLeftColor }}">{{ left }}</div>

    <div class="col-2 text-muted small">
        {{ label }}

        <div class="divider"></div>

        {% if left > right %}
            <i class="bi bi-chevron-double-left"></i>
        {% elseif left < right %}
            <i class="bi bi-chevron-double-right"></i>
        {% else %}
            <i class="bi bi-dash"></i>
        {% endif %}
    </div>

    {% set textRightColor = '' %}
    {% if left < right %}
        {% set textRightColor = 'text-success' %}
    {% elseif left > right %}
        {% set textRightColor = 'text-danger' %}
    {% endif %}

    <div class="col-5 fw-bold {{ textRightColor }}">{{ right }}</div>
</div>
