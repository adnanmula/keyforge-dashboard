<div class="card-body">
    <div class="row align-items-center mb-3">
        <div class="col-md-5 text-center">
            <h5 class="fw-bold text-success">{{ game.log.winner.name }}</h5>
            <p class="text-muted">{{ game.log.winner.deck }}</p>
        </div>
        <div class="col-md-2 text-center">
            <div class="display-6 fw-bold text-secondary">VS</div>
        </div>
        <div class="col-md-5 text-center">
            <h5 class="fw-bold text-danger">{{ game.log.loser.name }}</h5>
            <p class="text-muted">{{ game.log.loser.deck }}</p>
        </div>
    </div>

    <div class="row text-center">
        <div class="col-6 col-md-2 mb-3">
            <h6 class="fw-bold">{{ 'menu.turns'|trans }}</h6>
            <p class="text">{{ game.log.length }}</p>
        </div>
        <div class="col-6 col-md-2 mb-3">
            <h6 class="fw-bold">{{ 'menu.amber_obtained'|trans }}</h6>
            <p class="text">{{ game.log.amberObtained.total }} ({{ game.log.amberObtained.totalPositive }}{{ game.log.amberObtained.totalNegative }})</p>
        </div>
        <div class="col-6 col-md-2 mb-3">
            <h6 class="fw-bold">{{ 'menu.amber_stolen'|trans }}</h6>
            <p class="text">{{ game.log.amberStolen.total }}</p>
        </div>
        <div class="col-6 col-md-2 mb-3">
            <h6 class="fw-bold">{{ 'menu.cards_played'|trans }}</h6>
            <p class="text">{{ game.log.cardsPlayed.total }}</p>
        </div>
        <div class="col-6 col-md-2 mb-3">
            <h6 class="fw-bold">{{ 'menu.cards_drawn'|trans }}</h6>
            <p class="text">{{ game.log.cardsDrawn.total }}</p>
        </div>
        <div class="col-6 col-md-2 mb-3">
            <h6 class="fw-bold">{{ 'menu.cards_discarded'|trans }}</h6>
            <p class="text">{{ game.log.cardsDiscarded.total }}</p>
        </div>
        <div class="col-6 col-md-2 mb-3">
            <h6 class="fw-bold">{{ 'menu.fights'|trans }}</h6>
            <p class="text">{{ game.log.fights.count }}</p>
        </div>
        <div class="col-6 col-md-2 mb-3">
            <h6 class="fw-bold">{{ 'menu.reaps'|trans }}</h6>
            <p class="text">{{ game.log.reaps.count }}</p>
        </div>
        <div class="col-6 col-md-2 mb-3">
            <h6 class="fw-bold">{{ 'menu.keys_forged'|trans }}</h6>
            <p class="text">{{ game.log.keysForged.count }}</p>
        </div>
    </div>
</div>