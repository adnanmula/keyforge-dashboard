{% extends "Keyforge/Shared/keyforge_base.html.twig" %}

{% block title %}{{ 'deck.import'|trans }}{% endblock %}

{% block body %}
    {% if result != false %}
        <div class="row">
            <div class="col-1 col-sm-4 col-lg-3"></div>
            <div class="col-12 col-sm-12 col-lg-6">
                {% if success == true %}
                    <div class="alert alert-success" role="alert">
                        {{ 'deck.imported'|trans }} <a href="{{ path('keyforge_deck_detail', {'deckId': deckId}) }}">{{ 'deck.go_to_deck'|trans }}</a>
                    </div>
                {% elseif success == false %}
                    <div class="alert alert-danger" role="alert">{{ result }}</div>
                {% endif %}
            </div>
        </div>
    {% endif %}

    <div class="divider py-1"></div>

    <form action="{{ path('keyforge_deck_import') }}" method="post">
        <div class="row">
            <div class="col-1 col-sm-4 col-lg-3"></div>
            <div class="col-12 col-sm-12 col-lg-6">
                <div class="shadow-lg p-3 mb-5 bg-white rounded">
                    <input type="text" class="form-control" id="deck" name="deck" placeholder="{{ 'menu.link_deck'|trans }}" required>

                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" name="setUser" id="setUser" checked>
                        <label for="setUser">{{ 'deck.add_to_my_decks'|trans }}</label>
                    </div>

                    <button type="submit" class="col-4 btn btn-block btn-dark w-100">{{ 'deck.import'|trans }}</button>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
