        </div>
        <div class="col-1 ms-3 mb-1 h4">
            <img src="{{ asset('assets/keyforge/logos/key_cheat.svg') }}" alt="{{ 'deck.key_cheats'|trans }}" class="stat_icon" data-toggle="tooltip" title="{{ 'deck.key_cheats'|trans }}"/>
             &nbsp;{{ deck.stats.keyCheatCount }}
        </div>
        <div class="col-1 ms-3 mb-1 h4">
            <img src="{{ asset('assets/keyforge/logos/scaling_amber_control.svg') }}" alt="{{ 'deck.scaling_amber_control'|trans }}" class="stat_icon"  data-toggle="tooltip" title="{{ 'deck.scaling_amber_control'|trans }}</br>{{ deck.stats.scalingAmberControlCards|join('</br>') }}"/>
             &nbsp;{{ deck.stats.scalingAmberControlCount }}
        </div>
        <div class="col-1 ms-3 mb-1 h4">
            <img src="{{ asset('assets/keyforge/logos/board_wipe.svg') }}" alt="{{ 'deck.board_clears'|trans }}" class="stat_icon" data-toggle="tooltip" title="{{ 'deck.board_clears'|trans }}</br>{{ deck.stats.boardClearCards|join('</br>') }}" />
             &nbsp;{{ deck.stats.boardClearCount }}
        </div>
    </div>
</div>
